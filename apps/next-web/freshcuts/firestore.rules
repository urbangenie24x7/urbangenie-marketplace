rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId &&
        // Ensure phone is mandatory
        request.resource.data.keys().hasAll(['phone']) &&
        request.resource.data.phone is string &&
        request.resource.data.phone.size() > 0 &&
        // Role defaults to customer if not provided, must be valid if provided
        (!request.resource.data.keys().hasAny(['role']) || 
         request.resource.data.role in ['customer', 'admin', 'super_admin']);
    }
    
    // Carts are private to each user
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders are readable by customer and vendor involved
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        (resource.data.customerId == request.auth.uid || 
         resource.data.vendorId == request.auth.uid);
      allow create: if request.auth != null && request.auth.uid == resource.data.customerId;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.customerId || 
         request.auth.uid == resource.data.vendorId);
    }
    
    // Parent orders are readable by customer
    match /parentOrders/{orderId} {
      allow read: if request.auth != null && resource.data.customerId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == resource.data.customerId;
    }
    
    // Vendors can only modify their own products and settings
    match /vendorProducts/{docId} {
      allow read: if true; // Public read for marketplace
      allow write: if request.auth != null && request.auth.uid == resource.data.vendorId;
    }
    
    match /vendorDeliverySettings/{docId} {
      allow read: if true; // Public read for delivery options
      allow write: if request.auth != null && request.auth.uid == resource.data.vendorId;
    }
    
    // Vendors can only access their own profile
    match /vendors/{vendorId} {
      allow read: if true; // Public read for marketplace
      allow write: if request.auth != null && request.auth.uid == vendorId;
    }
    
    // Public read access for marketplace data
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only admin can modify master products
    }
    
    match /categoryCards/{cardId} {
      allow read: if true;
      allow write: if false; // Only admin can modify
    }
    
    match /brandSettings/{settingId} {
      allow read: if true;
      allow write: if false; // Only admin can modify
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // Only admin can modify
    }
    
    match /serviceable_pincodes/{pincodeId} {
      allow read: if true;
      allow write: if false; // Only admin can modify
    }
    
    // Analytics and error logs - write only for authenticated users
    match /analytics/{eventId} {
      allow read: if false; // Private analytics data
      allow create: if request.auth != null;
    }
    
    match /errorLogs/{errorId} {
      allow read: if false; // Private error logs
      allow create: if request.auth != null;
    }
    
    // Refunds collection
    match /refunds/{refundId} {
      allow read, write: if request.auth != null;
    }
    
    // Claims collection
    match /claims/{claimId} {
      allow read, write: if request.auth != null;
    }
    
    // Payment reconciliations
    match /paymentReconciliations/{reconciliationId} {
      allow read, write: if request.auth != null;
    }
    
    // Payment logs
    match /paymentLogs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}