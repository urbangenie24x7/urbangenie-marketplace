rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's cart items
      match /cart/{cartItemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public read access for categories and services
    match /categories/{categoryId} {
      allow read: if resource.data.is_active == true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    match /subcategories/{subcategoryId} {
      allow read: if resource.data.is_active == true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    match /services/{serviceId} {
      allow read: if resource.data.is_active == true;
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Orders - users can read/write their own orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.user_id || 
         request.auth.token.admin == true ||
         request.auth.token.vendor == true);
    }
    
    // Vendors can read/write their own data
    match /vendors/{vendorId} {
      allow read: if resource.data.verification_status == 'approved';
      allow write: if request.auth != null && 
        (request.auth.uid == vendorId || 
         request.auth.token.admin == true);
    }
    
    // Reviews - users can read all, write their own
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}